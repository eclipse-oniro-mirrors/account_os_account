import("../../../../os_account.gni")

#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")

##############################fuzztest##########################################
ohos_fuzztest("HasDomainAccountFuzzTest") {
  module_out_path = fuzz_output_path
  fuzz_config_file =
      "${os_account_path}/test/fuzztest/domainaccount/hasdomainaccount_fuzzer"
  include_dirs = [ "${os_account_path}/test/fuzztest/domainaccount/common" ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "hasdomainaccount_fuzzer.cpp" ]

  deps = [
    "${common_path}:libaccount_common",
    "${domain_account_framework_path}:domain_account_innerkits",
  ]

  external_deps = [
    "ability_base:want",
    "c_utils:utils",
    "hilog:libhilog",
  ]

  defines = [
    "ACCOUNT_LOG_TAG = \"DomainAccountFuzzTest\"",
    "LOG_DOMAIN = 0xD001B00",
  ]

  cflags_cc = []
  if (os_account_support_domain_accounts) {
    cflags_cc += [ "-DSUPPORT_DOMAIN_ACCOUNTS" ]
  }
}
