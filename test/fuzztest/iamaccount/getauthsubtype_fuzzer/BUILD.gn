import("../../../../os_account.gni")

#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")

##############################fuzztest##########################################
ohos_fuzztest("GetAuthSubTypeFuzzTest") {
  module_out_path = fuzz_output_path

  fuzz_config_file =
      "${os_account_path}/test/fuzztest/iamaccount/getauthsubtype_fuzzer"
  include_dirs = [ "${account_iam_interfaces_native_path}/include" ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  cflags_cc = [
    "-Wdate-time",
    "-Wformat=2",
    "-Wfloat-equal",
    "-Wshadow",
  ]

  external_deps = []
  if (has_pin_auth_part) {
    cflags_cc += [ "-DHAS_PIN_AUTH_PART" ]
    external_deps += [ "pin_auth:pinauth_framework" ]
  }

  if (has_user_auth_part) {
    cflags_cc += [ "-DHAS_USER_AUTH_PART" ]
    external_deps += [ "user_auth_framework:userauth_client" ]
  }

  sources = [ "getauthsubtype_fuzzer.cpp" ]

  deps = [
    "${account_iam_framework_path}:account_iam_innerkits",
    "${common_path}:libaccount_common",
  ]

  external_deps += [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]

  defines = [
    "ACCOUNT_LOG_TAG = \"GetAuthSubTypeFuzzTest\"",
    "LOG_DOMAIN = 0xD001B00",
  ]
}
