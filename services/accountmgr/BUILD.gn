  relative_install_dir = "account"
  subsystem_name = "account"
  part_name = "os_account"
}

ohos_prebuilt_etc("os_account_config") {
  source = "os_account_config.json"
  relative_install_dir = "account"
  subsystem_name = "account"
  part_name = "os_account"
