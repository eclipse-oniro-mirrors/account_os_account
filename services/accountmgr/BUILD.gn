  account_iam_sources = [
    "src/account_iam/account_iam_callback.cpp",
    "src/account_iam/account_iam_client_callback_proxy.cpp",
    "src/account_iam/account_iam_mgr_stub.cpp",
    "src/account_iam/account_iam_service.cpp",
