import("//build/ohos.gni")
import("//build/test.gni")
import("../../../../../../os_account.gni")

module_output_path = "os_account/os_account"

config("account_database_config_unittest") {
  visibility = [ ":*" ]

  include_dirs = [
  "${services_path}/accountmgr/include/common/database/kvstore",
  "${services_path}/accountmgr/include/common/database",
  "${services_path}/accountmgr/include",
  ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }

  defines = [
    "ACCOUNT_LOG_TAG = \"AccountDatabaseUTest\"",
    "LOG_DOMAIN = 0xD001B01",
  ]
}

ohos_unittest("kvstore_adapter_test") {
  branch_protector_ret = "pac_ret"

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
    blocklist = "${os_account_path}/cfi_blocklist.txt"
  }

  module_out_path = module_output_path

  configs = [
    ":account_database_config_unittest",
  ]

  sources = [
    "${services_path}/accountmgr/src/common/database/kvstore/kvstore_adapter_impl.cpp",
    "${services_path}/accountmgr/src/account_data_storage.cpp",
    "kvstore_adapter_test.cpp",
  ]

  deps = [
    "${app_account_innerkits_native_path}:app_account_innerkits",
    "${common_path}:libaccount_common",
  ]

  external_deps = [
    "kv_store:distributeddata_inner",
    "cJSON:cjson",
    "c_utils:utils",
    "googletest:gmock_main",
    "googletest:gtest_main",
    "hilog:libhilog",
  ]
}

group("unittest") {
  testonly = true
  deps = [
    ":kvstore_adapter_test",
  ]
}